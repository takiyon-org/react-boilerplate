{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2020",
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "js/*": ["src/js/*"]
    },
    "lib": ["dom", "es6"]
  },
  "include": [
    "./src/js/**/*"
  ]
}
