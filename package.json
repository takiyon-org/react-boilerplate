{
  "name": "react-boilerplate",
  "version": "4.0.0",
  "description": "A sensible, minimal, and server-agnostic boilerplate for React projects.",
  "main": "webpack.config.js",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "dev-server": "webpack serve",
    "format:style": "prettier --write src/scss/**/*.scss",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint src/js/**/*.{js,ts,tsx} test/**/*.{js,ts,tsx} *.{js,ts,tsx}",
    "lint:style": "stylelint src/scss/**/*.scss",
    "release": "npm run test && npm run build",
    "test": "npm run lint && npm run test:script && npm run test:style-format",
    "test:script": "cross-env tsx ./node_modules/.bin/mocha test/**/*.{js,ts,tsx}",
    "test:style-format": "prettier --check src/scss/**/*.scss"
  },
  "author": "Jake Zatecky",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "chai": "^6.0.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.0.0",
    "eslint": "^9.1.1",
    "eslint-config-takiyon-react": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "global-jsdom": "^26.0.0",
    "globals": "^16.3.0",
    "html-bundler-webpack-plugin": "^4.21.1",
    "jsdom": "^26.1.0",
    "mocha": "^11.7.1",
    "prettier": "^3.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "stylelint": "^16.0.2",
    "stylelint-config-takiyon": "^6.0.0",
    "ts-loader": "^9.5.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "webpack": "^5.3.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.0"
  }
}
