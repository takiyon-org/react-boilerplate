{
  "name": "react-boilerplate",
  "version": "3.1.0",
  "description": "A sensible, minimal, and server-agnostic boilerplate for React projects.",
  "main": "webpack.config.js",
  "scripts": {
    "build": "webpack",
    "dev-server": "webpack serve",
    "format:style": "prettier --write src/scss/**/*.scss",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint src/js/**/*.{js,jsx} test/**/*.{js,jsx} *.{js,jsx}",
    "lint:style": "stylelint src/scss/**/*.scss",
    "release": "npm run test && npm run build",
    "test": "npm run lint && npm run test:script && npm run test:style-format",
    "test:script": "cross-env NODE_PATH=./src mocha test/**/*.{js,jsx}",
    "test:style-format": "prettier --check src/scss/**/*.scss"
  },
  "author": "Jake Zatecky",
  "license": "MIT",
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.14.4",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@testing-library/react": "^14.0.0",
    "babel-loader": "^9.0.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "eslint": "^8.27.0",
    "eslint-config-takiyon-react": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^4.2.0",
    "global-jsdom": "^9.0.1",
    "html-bundler-webpack-plugin": "^3.1.3",
    "jsdom": "^22.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.3.0",
    "stylelint-config-takiyon": "^3.0.0",
    "webpack": "^5.3.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}
